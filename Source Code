#include<stdio.h>
#include<stdlib.h>

// This is code for a factorial algorithm. This is the first recursive algorithm I have ever tried to write.
// I will edit this firther.

int factor(int a);

int main(void)
{
    int x;
    int *p;
    scanf("%i", &x);
    p = &x;
    factor(x);
}

int factor(int a)
{
    int b;
    int c;
    for (int i = 0; i < a;)
    {
        b = a - 1;
        c = a*b;
        if (b == 1)
        {
            return 1;
        }
        else if(b > 1)
        {
        i++;
        return a * factor(a - 1);
        }
        else
        {
            return c;
            printf("%i", c);
        }
        return 1;
    }
    return 1;
}
